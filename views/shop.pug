extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://picsum.photos/seed/picsum/220/200", alt="img")
                        .card__content
                            h2.product__price $545
                            p.product__description interesting book
                        .card__actions
                            button.btn Add to cart
        else
            h1 no products