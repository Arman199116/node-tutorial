<main>

    {{#if hasProducts}}
    <div class="grid">
        {{#each prods}}
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">{{this.title}}</h1>
            </header>
            <div class="card__image">
                <img src="https://picsum.photos/seed/picsum/220/200" , alt="img" />
            </div>
            <div class="card__content">
                <h2 class="product__price">$545</h2>
                <p class="product__description">interesting book</p>
            </div>
            <div class="card__actions">
                <button class="btn">Add to cart</button>
            </div>
        </article>
        {{/each}}
    </div>
    {{ else }}
    <h1>No Product</h1>
    {{/if}}

</main>